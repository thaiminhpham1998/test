<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_patient_tag_tree" model="ir.ui.view">
        <field name="name">patient.tag.tree</field>
        <field name="model">patient.tag</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="active"/>
                <field name="color" widget='color_picker'/>
                <field name="color_add" widget='color'/>
            </tree>    
            
                
        
        </field>
    </record>

    <record id="patient_tag_form" model="ir.ui.view">
        <field name="name">patient.tag.form</field>
        <field name="model">patient.tag</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    
                    <group>
                        
                        <group>
                        
                            <field name="name"/>
                            <field name="active" widget='boolean_toggle'/>
                        </group>
                        <group>
                            
                            <field name="color" widget='color_picker'/>
                            <field name="color_add" widget='color' group='base_group_no_one'/>
                        </group>
                    </group>
                </sheet>
                <!-- <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div> -->
            </form>    
            
        </field>
    </record>

    <record id="action_patient_tag" model="ir.actions.act_window">
        <field name="name">Tags</field>
        <field name="res_model">patient.tag</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a patient tags !
            </p>
        </field>
    </record>

    <menuitem id="menu_configuration"
            name="Configurations"
            parent="menu_hospital_root"
            sequence="10"
        />
    <menuitem id="menu_patient_tag"
            name="Tags"
            action="action_patient_tag"
            parent="menu_configuration"
            sequence="10"
        />
</odoo>