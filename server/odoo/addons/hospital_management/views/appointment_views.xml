<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_appointment_kanban" model="ir.ui.view">
            <field name="name">hospital.appointment.kanban</field>
            <field name="model">hospital.appointment</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="id"/>
                    <field name="patient_id"/>
                    <field name="genders"/>
                    <field name="age"/>
                    
                    
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_global_click">
                                <!-- <div class="o_kanban_image">
                                    <img alt="Avatar" t-att-src="kanban_image('res.users', 'avatar_128', record.id.raw_value)"/>
                                </div> -->
                                <div class="oe_kanban_details">
                                    <ul>
                                        <li>
                                            Name:<field name="patient_id"/>
                                        </li>
                                        <li>
                                            Gender:<field name="genders"/>
                                        </li>
                                        <li>
                                            Age:<field name="age"/>
                                        </li>
                                        
                                        
                                        <!-- <li class="text-success float-end mb4" t-if="record.active.raw_value"><i class="fa fa-circle" role="img" aria-label="Ok" title="Ok"></i></li>
                                        <li class="text-danger float-end mb4" t-if="!record.active.raw_value"><i class="fa fa-circle" role="img" aria-label="Invalid" title="Invalid"></i></li>
                                        <li class="mb4">
                                            <strong><field name="name"/></strong>
                                        </li>
                                        <li class="d-flex flex-wrap">
                                            <span class="mb4 text-truncate" title="Login">
                                                <i class="fa fa-envelope me-1" role="img" aria-label="Login"/>
                                                <field name="login"/>
                                            </span>
                                            <field class="badge rounded-pill mb4 ms-auto" name="lang"/>
                                        </li> -->
                                    </ul>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        

    <record id="appointment_form" model="ir.ui.view">
        <field name="name">hospital.appointment.form</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_confirm" 
                        id="button_confirm" 
                        string="Confirm" 
                        class="btn-primary" 
                        type="object"
                        confirm="Are you sure that you need to confirm?"
                    />
                    <button name="action_done" 
                        id="button_done" 
                        string="Done" 
                        class="btn-primary"  
                        type="object"
                        />
                    <button name="action_draft" 
                        id="button_draft" 
                        string="Draft" 
                        class="btn-primary"  
                        type="object"
                    />
                    <button name="action_cancel" 
                        id="button_cancel" 
                        string="Cancel"  
                        type="object"
                        confirm="Are you sure that you need to Cancel"
                    />
                    <!-- <field name="stage" widget="statusbar" options="{'clickable': '1'}" /> -->
                    <field name="stages" widget="statusbar" statusbar_visible="draft,done,confirm" />
                </header>
                <sheet>
                    <div>
                        <h2>
                            <field name="priority" widget="priority"/>
                        </h2>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="references" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                        
                            <field name="patient_id"/>
                            <field name="age"/>
                            <field name="references"/>
                            <field name="genders" require='True'/>    
            
                        </group>
                        <group>
                            <field name="notes" /> 
                            <!-- <field name="date_patients"/>
                            <field name="checkuptimes"/>
                            <field name="phones"/>
                            <field name="emails"/> -->
                            <button name="action_notification" 
                            groups="base.group_no_one"
                            string="Notification"  
                            type="object"
                            class="oe_highlight"
                            />
                        
                        </group>
                    </group>
                    <notebook>
                        <page string ='Prescription'>
                            <field name="prescripton" placeholder="Enter your prescription"
                                options="{'resizable':true}"/>
                        </page>
                        <page string ='Pharmacy'>
                            <field name="genders"/> 
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>    
            
        </field>
    </record>
    <record id="view_hospital_appointment_activity" model="ir.ui.view">
        <field name="name">hospital.appointment.activities</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <activity string="Appointment">
                <field name="references"/>
                <field name="patient_id"/>
                <templates>
                    <div t-name="activity-box">
                        <img  t-att-src="activity_image('hospital.patient', 'image', record.patient_id.raw_value)"  t-att-title="record.patient_id.value" t-att-alt="record.patient_id.value"/>
                        <div class="ms-2">
                            <field name="references" display="full" />
                            
                        </div>
                    </div>
                </templates>
            </activity>
            
                
        
        </field>
    </record>

    <record id="view_hospital_appointment_tree" model="ir.ui.view">
        <field name="name">hospital.appointment.tree</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <tree decoration-success="stages=='done'" 
            decoration-info="stages == 'confirm'" 
            decoration-danger="stages=='cancel'"
            decoration-warning="stages=='draft'">
            <header>
                <button name="action_confirm" 
                    
                    string="Confirm" 
                    class="btn-primary" 
                    type="object"
                    
                />
                
                <!-- <field name="stage" widget="statusbar" options="{'clickable': '1'}" /> -->
                
            </header>
                <field name="patient_id"/>
                <field name="age"/>
                <!-- <field name="responsibles"/>
                <field name="date_patients"/> -->
                <field name="genders"/>
                <field name="stages"
                decoration-success="stages=='done'" 
                    decoration-info="stages == 'confirm'" 
                    decoration-danger="stages=='cancel'"
                    decoration-warning="stages=='draft'"
                    widget="badge"/>
                <field name="notes"/> 
                <field name="priority"/>
            </tree>    
            
                
        
        </field>
    </record>
    <record id="action_hospital_appointment" model="ir.actions.act_window">
        <field name="name">Appointments</field>
        <field name="res_model">hospital.appointment</field>
        <field name="view_mode">tree,form,kanban,activity</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a hospital appointment !
            </p>
        </field>
    </record>

    <menuitem id="menu_appointment_master"
            name="Appointments Details"
            parent="menu_hospital_root"
            sequence="10"
        />
    <menuitem id="menu_appointment"
            name="Appointments"
            action="action_hospital_appointment"
            parent="menu_appointment_master"
            sequence="10"
        />
</odoo>
