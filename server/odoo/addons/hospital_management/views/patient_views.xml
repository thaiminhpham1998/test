<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_patient_kanban" model="ir.ui.view">
            <field name="name">hospital.patient.kanban</field>
            <field name="model">hospital.patient</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="id"/>
                    <field name="name"/>
                    <field name="gender"/>
                    <field name="age"/>
                    <field name="note"/>
                    
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_global_click">
                                <!-- <div class="o_kanban_image">
                                    <img alt="Avatar" t-att-src="kanban_image('res.users', 'avatar_128', record.id.raw_value)"/>
                                </div> -->
                                <div class="oe_kanban_details">
                                    <ul>
                                        <li>
                                            Name:<field name="name"/>
                                        </li>
                                        <li>
                                            Gender:<field name="gender"/>
                                        </li>
                                        <li>
                                            Age:<field name="age"/>
                                        </li>
                                        <li>
                                            Note:<field name="note"/>
                                        </li>
                                        
                                        <!-- <li class="text-success float-end mb4" t-if="record.active.raw_value"><i class="fa fa-circle" role="img" aria-label="Ok" title="Ok"></i></li>
                                        <li class="text-danger float-end mb4" t-if="!record.active.raw_value"><i class="fa fa-circle" role="img" aria-label="Invalid" title="Invalid"></i></li>
                                        <li class="mb4">
                                            <strong><field name="name"/></strong>
                                        </li>
                                        <li class="d-flex flex-wrap">
                                            <span class="mb4 text-truncate" title="Login">
                                                <i class="fa fa-envelope me-1" role="img" aria-label="Login"/>
                                                <field name="login"/>
                                            </span>
                                            <field class="badge rounded-pill mb4 ms-auto" name="lang"/>
                                        </li> -->
                                    </ul>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

    <record id="patient_form" model="ir.ui.view">
        <field name="name">hospital.patient.form</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_confirm" 
                        id="button_confirm" 
                        string="Confirm" 
                        class="btn-primary" 
                        type="object"
                        confirm="Are you sure that you need to confirm?"
                    />
                    <button name="action_done" 
                        id="button_done" 
                        string="Done" 
                        class="btn-primary"  
                        type="object"
                        help="click to Done"
                        />
                    <button name="action_draft" 
                        id="button_draft" 
                        string="Draft" 
                        class="btn-primary"  
                        type="object"
                    />
                    <button name="action_cancel" 
                        id="button_cancel" 
                        string="Cancel"  
                        type="object"
                        confirm="Are you sure that you need to Cancel"
                    />
                    <!-- <field name="stage" widget="statusbar" options="{'clickable': '1'}" /> -->
                    <field name="stage" widget="statusbar" statusbar_visible="draft,done,confirm" />
                </header>
                <sheet>
                    <div class="alert alert-info text-center o_form_header" role="alert"
                        invisible="is_birthday != False ">
                        <a href="#" class="close" data-bs-dismiss="alert" aria-label="close" title="close">Ã—</a>
                        <div>
                            <strong>
                                Today is Birthday!
                            </strong>
                        </div>
                        <div>  
                            <field name="age"/>
                        </div>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="reference" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <field name="image" widget='image' class='oe_avatar'/>
                        <group>
                        
                            <field name="name"/>
                            <field name="age"/>
                            <field name="responsible"/>
                            <field name="gender" widget='radio' />
                            <!-- <field name="booking_date"/>     -->
                            <field name="appointment_id"/>
                            <field name="doctor_id" widget="many2one_avatar"/>
                        </group>
                        <group>
                            <field name="date_patient"/>
                            <field name="date_of_birth"/>
                            <field name="reference"/>
                            
                            <field name="company_id"/>
                            <field name="currency_id"/>

                            <field name="checkuptime"/>
                            <field name="phone"/>
                            <field name="email"/>
                            <field name="note"/>
                            <field name="tag_ids" widget='many2many_tags' options="{'color_field':'color'}"/>
                            <field name="is_birthday" />
                        </group>
                    </group>
                    <notebook>
                        <page string ='Prescription' name='prescription'>
                            <group>
                                <field name="gender"/>
                            </group> 
                            <group>
                                <field name="phone" widget="phone"/>
                                <field name="email" widget="email"/>
                                <field name="website" widget="url"/>
                            </group>   
                        </page>
                        
                    </notebook>
                    <notebook>
                        <page string ='Pharmacy' name='pharmacy'>
                            <group>
                                
                                <field name="booking_date"/>
                                <field name="pharmacy_line">
                                    <tree>
                                        <field name="product_id"/>
                                        <field name="price_unit"/>  
                                        <field name="qty"/>
                                        <field name="price_subtotal"/>
                                    </tree>
                                    <form>
                                        <group>
                                            <field name="product_id"/>
                                            <field name="price_unit"/>  
                                            <field name="qty"/>
                                            <field name="currency_id" invisible='1'/>
                                            <field name="price_subtotal" decoration-bt='1'/>
                                        </group>
                                    </form>
                                </field>
                                
                            </group>
                            
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>    
            
        </field>
    </record>
    <record id="view_hospital_patient_calendar" model="ir.ui.view">
        <field name="name">hospital.patient.calendar</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <calendar string="Patients" date_start="booking_date">
                <field name="name"/>
            </calendar>    
        </field>
    </record>
    <record id="view_hospital_patient_tree" model="ir.ui.view">
        <field name="name">hospital.patient.tree</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <tree decoration-success="stage=='done'" 
                decoration-info="stage == 'confirm'" 
                decoration-danger="stage=='cancel'"
                decoration-warning="stage=='draft'">
                <field name="name"/>
                <field name="image" widget='image' options="{'size': [50, 50]}"/>
                <field name="age"/>
                <field name="responsible"/>
                <field name="date_patient"/>
                <field name="gender" decoration-it ='1'/>
                <field name="doctor_id" widget="many2one_avatar_user"/>
                <field name="stage" 
                    decoration-success="stage=='done'" 
                    decoration-info="stage == 'confirm'" 
                    decoration-danger="stage=='cancel'"
                    decoration-warning="stage=='draft'"
                    widget="badge"/>
                <field name="activity_ids" widget="list_activity"/>
                <field name="note"/>
                <field name="tag_ids" widget='many2many_tags' options="{'color_field':'color'}"/>
                <field name="progress" widget="progressbar" />
            </tree>    
        
        </field>
    </record>


    <record id="action_hospital_patient" model="ir.actions.act_window">
        <field name="name">Patients</field>
        <field name="res_model">hospital.patient</field>
        <field name="view_mode">tree,calendar,form,kanban</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a patient !
            </p>
        </field>
    </record>
    
